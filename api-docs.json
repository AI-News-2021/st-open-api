{
  "openapi": "3.0.1",
  "info": {
    "title": "MilkScout API",
    "description": "An API designed to allow creameries to trade dairy",
    "version": "1",
    "x-logo": {
      "url": "https://assets.milkscout-stage.eu/logo/logo.png",
      "altText": "MilkScout GmbH"
    }
  },
  "servers": [
    {
      "url": "https://api.milkscout-stage.eu",
      "description": "Stage environment"
    }
  ],
  "paths": {
    "/storage/{company}/productSpec/upload": {
      "post": {
        "tags": [
          "storage"
        ],
        "description": "Upload a product spec",
        "operationId": "uploadProductSpec",
        "parameters": [
          {
            "name": "company",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          },
          {
            "name": "contentType",
            "in": "query",
            "required": true,
            "schema": {
              "$ref": "#/components/schemas/ContentType"
            }
          },
          {
            "name": "description",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "product",
            "in": "query",
            "required": true,
            "schema": {
              "$ref": "#/components/schemas/MilkProduct"
            }
          }
        ],
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "required": [
                  "file"
                ],
                "type": "object",
                "properties": {
                  "file": {
                    "type": "string",
                    "format": "binary"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        },
        "security": [
          {
            "oauth2": [
              "ADMIN",
              "SUPPORT",
              "TRADER",
              "SHIPPER"
            ]
          }
        ]
      }
    }
  },
  "components": {
    "schemas": {
      "MilkProduct": {
        "type": "string",
        "enum": [
          "SKIMMED_MILK",
          "CONCENTRATED_SKIMMED_MILK_30",
          "CONCENTRATED_SKIMMED_MILK_35",
          "CONCENTRATED_SKIMMED_MILK_38",
          "MILK_PERMEATE",
          "CONCENTRATED_MILK_PERMEATE",
          "RAW_MILK",
          "FULL_CREAM_MILK_3_5",
          "CONCENTRATED_FULL_CREAM_MILK_30_32",
          "CREAM_33",
          "CREAM_40",
          "LIQUID_WHEY",
          "WHEY_CONCENTRATE_30",
          "PERMEATE",
          "CONCENTRATED_WHEY_PERMEATE",
          "BUTTERMILK",
          "ACID_BUTTERMILK",
          "BUTTERMILK_CONCENTRATE",
          "SWEETENED_CONDENSED_MILK",
          "CONDENSED_MILK",
          "LIQUID_LACTOSE"
        ]
      },
      "ContentType": {
        "type": "string",
        "enum": [
          "JPG",
          "PNG",
          "PDF"
        ]
      }
    }
  }
}
